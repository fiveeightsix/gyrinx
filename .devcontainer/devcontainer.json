{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "hostRequirements": {
        "cpus": 4
    },
    "waitFor": "onCreateCommand",
    "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && pip install --editable .",
    "customizations": {
        "codespaces": {
            "openFiles": []
        },
        "vscode": {
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "GitHub.copilot",
                "sleistner.vscode-fileutils",
                "ms-toolsai.jupyter",
                "esbenp.prettier-vscode",
                "tamasfe.even-better-toml"
            ]
        }
    },
    "portsAttributes": {},
    "forwardPorts": []
}
